{
  "name": "react-music",
  "jest": {
    "moduleNameMapper": {
      "^@src(.*)$": "<rootDir>/$1",
      "^@component(.*)$": "<rootDir>/src/component$1",
      "^@constant(.*)$": "<rootDir>/src/constant$1",
      "^@pages(.*)$": "<rootDir>/src/pages$1",
      "^@sass(.*)$": "<rootDir>/src/sass$1",
      "^@store(.*)$": "<rootDir>/src/store$1",
      "^@test-tools(.*)$": "<rootDir>/src/test-tools$1"
    }
  },
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "classnames": "^2.2.6",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-router-dom": "^5.1.2",
    "react-scripts": "3.4.1",
    "react-use": "^14.1.0",
    "swr": "^0.2.0",
    "unstated-next": "^1.1.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --pattern='src/*' --staged && npm run lint && npm run test -- --watchAll=false && npm run build",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "homepage": "https://croatiaparanoia.github.io/react-music",
  "scripts": {
    "lint": "eslint src/ --ext .ts,.tsx",
    "start": "react-app-rewired start",
    "build": "react-app-rewired build",
    "test": "react-app-rewired test",
    "eject": "react-app-rewired eject",
    "ci": "npm run lint && npm run test -- --watchAll=false && npm rebuild node-sass && npm run build"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "@types/classnames": "^2.2.10",
    "@types/jest": "^24.0.0",
    "@types/node": "^12.0.0",
    "@types/react": "^16.9.0",
    "@types/react-dom": "^16.9.0",
    "@types/react-router-dom": "^5.1.3",
    "@typescript-eslint/eslint-plugin": "^2.27.0",
    "@typescript-eslint/parser": "^2.27.0",
    "babel-plugin-import": "^1.13.0",
    "customize-cra": "^0.9.1",
    "eslint": "^6.8.0",
    "eslint-config-alloy": "^3.6.0",
    "eslint-plugin-react": "^7.19.0",
    "husky": "^4.2.3",
    "node-sass": "^4.13.1",
    "pre-commit": "^1.2.2",
    "prettier": "^2.0.4",
    "pretty-quick": "^2.0.1",
    "react-app-rewired": "^2.1.5",
    "typescript": "^3.8.3"
  }
}
